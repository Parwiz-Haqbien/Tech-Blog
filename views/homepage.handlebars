{{!-- main page of the website, this is responsible for displaying the card on the page --}}
<section >
    <div class="container">
        {{#each posts as |post|}}
        
            <div class="box">
                <a href="/post/{{id}}">  
                    <div class="content has-text-black">
                        <h4 class="has-text-success"> {{title}} </h4> 
                        <p class="post"> {{post_body}} </p>
                        <p> <small> {{format_date created_at}} </small> </p>
                    </div>
                </a>
            </div>
        

        {{else}}
        <h4 class="mt-5"><strong> No Posts Yet</strong></h4>
        {{/each}}
    </div>
</section>