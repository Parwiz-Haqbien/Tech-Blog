<section >
    <div class="container">
        <div class="content mt-3">
            <h3>{{username}}'s Posts</h3>
        </div>

        {{#if postlength}}
        {{#each posts as |post|}}
        <div class="box">
            <div class="content">   
                <h5> {{title}} </h5>
                <p>{{post_body}}</p>
                <p><small> {{format_date created_at}} </small></p>

                    <button class="button is-warning is-small js-modal-trigger" data-toggle="modal" data-target="editPost{{id}}">
                        <span>
                            <a class="has-text-black">Edit</a>
                        </span>
                    </button>

                    <button class="button is-danger is-small js-modal-trigger" data-target="deletePost{{id}}">
                        <span>
                            <a class="has-text-white">Delete</a>
                        </span>
                    </button>
            </div>
        </div>
                <button class="button is-warning js-modal-trigger" data-target="addPost"> 
                    <span> 
                    <a class="has-text-dark"> Create New Post </a>
                    </span>
                </button>
</section>

{{!-- edit post that was made by the user --}}
<div class="modal" id="editPost{{id}}">
    <div class="modal-background">
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title"> Editing Post: {{title}} </p>
                <button class="delete" aria-label="close"></button>
            </header>

            <section class="modal-card-body">
                <div class="field">
                    <label class="label"> Edit Title: </label>
                    <div class="control">
                        <textarea class="textarea" id="title{{id}}" rows="1"> {{title}} </textarea>
                    </div>
                </div>
                <textarea class="textarea" id="editedPost{{id}}"> {{post_body}} </textarea>
            </section>

            <footer class="modal-card-foot">
                <button class="button is-warning" id="edit-post-save" data-id="{{id}}">Save Changes</button>
                <button class="button" id="cancel">Cancel</button>
            </footer>
        </div>
    </div>
</div>

{{!-- delete post by the user that made it  --}}
<div class="modal" id="deletePost{{id}}" >
    <div class="modal-background">
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title"> Deleting Post: {{title}} </p>
                <button class="delete" aria-label="close"></button>
            </header>

            <section class="modal-card-body">
                <p>Are you sure you want to delete your <strong> {{title}} </strong>post?</p>
            </section>

            <footer class="modal-card-foot">
                <button class="button is-danger" id="delete-post" data-id="{{id}}">Confirm</button>
                <button class="button" id="cancel">Cancel</button>
            </footer>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<h4 class="mt-5 mb-5"> <strong> No Posts Yet</strong></h4>
<button class="button is-warning js-modal-trigger" data-target="addPost"> 
    <span> 
    <a class="has-text-success"> Create New Post </a>
    </span>
</button>
{{/if}}

{{!-- posting a new blog by the user --}}
<div class="modal" id="addPost">
    <div class="modal-background">
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title has-text-danger">New Post</p>
                <button class="delete" aria-label="close"></button>
            </header>

            <section class="modal-card-body">
                <div class="field">
                    <label class="label"> Title </label>
                    <div class="control">
                        <input class="input" id="new-post-title" type="text" placeholder="Enter the title for the post* ">
                    </div>
                </div>

                <div class="field">
                    <label class="label"> Content </label>
                    <div class="control">
                        <textarea class="textarea" id="new-post-body" placeholder="Write your post*"></textarea>
                    </div>
                </div>
            </section>

            <footer class="modal-card-foot">
                <button class="button is-warning" id="new-post-save" data-id="{{id}}">Submit</button>
                <button class="button" id="cancel">Cancel</button>
            </footer>
        </div>
    </div>
</div>
<script src="/js/modal.js"></script>
<script src="/js/post.js"></script>